{
	"image": "mcr.microsoft.com/devcontainers/javascript-node:0-18",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/dotnet:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mads-hartmann.bash-ide-vscode",
				"dbaeumer.vscode-eslint",
				"ms-dotnettools.csharp",
				"nuke.support",
				"redhat.vscode-yaml",
				"GitHub.vscode-pull-request-github"
			]
		}
	},
	"postCreateCommand": {
		"devcontainers": "npm install -g @devcontainers/cli@0.27.0",
		"nuke": "dotnet tool install Nuke.GlobalTool --global",
		"restore": "dotnet restore build",
		"git": "git config --global --add safe.directory /workspaces/devcontainer-template-test"
	}
}
