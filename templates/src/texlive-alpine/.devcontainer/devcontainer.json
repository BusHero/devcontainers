{
	"name": "TeX Live base",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"scheme": "${templateOption:texliveScheme}",
			"ltex_version": "15.2.0"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"valentjn.vscode-ltex",
				"James-Yu.latex-workshop",
				"ms-azuretools.vscode-docker"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				},
				"files.exclude": {
					"**/*.aux": true,
					"**/*.bbl": true,
					"**/*.bbl-SAVE-ERROR": true,
					"**/*.bcf": true,
					"**/*.bib.sav": true,
					"**/*.blg": true,
					"**/*.fdb_latexmk": true,
					"**/*.fls": true,
					"**/*.lof": true,
					"**/*.log": true,
					"**/*.pdf": true,
					"**/*.run.xml": true,
					"**/*.synctex.gz": true,
					"**/bin": true,
					"**/ltex*.txt": true
				},
				"[bibtex]": {
					"editor.defaultFormatter": "James-Yu.latex-workshop"
				},
				"latex-workshop.formatting.latexindent.args": [
					"-c",
					"%DIR%/",
					"%TMPFILE%"
				],
				"latex-workshop.linting.run": "onType",
				"latex-workshop.latex.autoBuild.run": "onSave",
				"latex-workshop.formatting.latex": "latexindent",
				"latex-workshop.latex.bibDirs": [
					"/workspaces/"
				],
				"ltex.ltex-ls.path": "/ltex-ls",
				"ltex.java.path": "/usr/",
				"ltex.additionalRules.languageModel": "en",
				"ltex.completionEnabled": true,
				"ltex.additionalRules.enablePickyRules": true,
				"ltex.statusBarItem": true
			}
		},
		"settings": {
			"terminal.integrated.shell.*": "/bin/zsh"
		}
	},
	"remoteUser": "root"
}
