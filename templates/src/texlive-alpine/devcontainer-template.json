{
    "id": "texlive-alpine",
    "version": "0.4.0",
    "name": "Alpine TexLive",
    "description": "A template for TexLive with Alpine linux",
    "documentationURL": "https://github.com/BusHero/devcontainers/tree/main/templates/src/texlive-alpine",
    "licenseURL": "https://raw.githubusercontent.com/BusHero/devcontainers/refs/heads/main/LICENSE",
    "platforms": [
        "Alpine"
    ],
    "options": {
        "texliveScheme": {
            "type": "string",
            "description": "The scheme of TexLive to install",
            "enum": [
                "full",
                "tetex",
                "small",
                "minimal",
                "medium",
                "basic"
            ],
            "default": "basic"
        }
    }
}
